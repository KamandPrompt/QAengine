<% link_to "Home", root_path %>

<% provide(:title, "Log in") %>
<h1>Log in</h1>

    <%= form_tag(@user, url: {action: :login, controller: :sessions }, method: :get) do |f| %>

      <%= f.label : "Username : " %>
      <%= f.text_field :username%>

      <%= f.label : "Password : " %>
      <%= f.password_field :password, %>

      <%= f.submit "Log in" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>